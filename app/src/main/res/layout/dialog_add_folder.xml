<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/shape_7_white"
        android:orientation="vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="35dp"
            android:text="@string/AddFolderDialog_title"
            android:textColor="@color/color_333"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:text="@string/AddFolderDialog_subtitle"
            android:textColor="@color/color_333"
            android:textSize="12sp" />


        <EditText
            android:id="@+id/etAddFolderDialogName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="15dp"
            android:background="@drawable/bg_add_folder_input"
            android:hint="@string/AddFolderDialog_hint"
            android:padding="4dp"
            android:textSize="13sp" />

        <include
            layout="@layout/view_divide_line_vertical"
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:layout_marginTop="30dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tvAddFolderDialogCancel"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/app_cancel"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="15sp" />

            <View
                android:layout_width="1px"
                android:layout_height="match_parent"
                android:background="@color/color_divide" />

            <TextView
                android:id="@+id/tvAddFolderDialogConfirm"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:enabled="false"
                android:gravity="center"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="@string/app_confirm"
                android:textColor="@color/bg_add_folder_dialog_comfirm"
                android:textSize="15sp" />

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>