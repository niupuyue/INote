<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.paulniu.inote"
    android:versionCode="100"
    android:versionName="0.0.1">

    <application
        android:name=".App"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppBaseTheme">

        <!-- 是否需要展示欢迎页面 -->
        <meta-data
            android:name="isNeedShowSplash"
            android:value="false" />

        <activity android:name=".ui.FirstActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.EditMemoActivity" />
        <activity android:name=".MainActivity" />
        <activity android:name=".ui.SplashActivity" />
        <activity android:name=".ui.MemoForFolderActivity" />
        <activity android:name=".ui.NewMemoActivity" />
    </application>

</manifest>